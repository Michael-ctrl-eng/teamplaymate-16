{
  "version": 2,
  "name": "statsor-frontend",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://api.statsor.com/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://api.statsor.com",
    "VITE_APP_URL": "https://statsor.com",
    "VITE_OPENAI_API_KEY": "@openai-api-key",
    "VITE_SUPABASE_URL": "@supabase-url",
    "VITE_SUPABASE_ANON_KEY": "@supabase-anon-key",
    "VITE_PAYPAL_CLIENT_ID": "@paypal-client-id",
    "VITE_PAYPAL_CLIENT_SECRET": "@paypal-client-secret",
    "VITE_HUGGINGFACE_API_KEY": "@huggingface-api-key",
    "VITE_FOOTBALL_API_KEY": "@football-api-key",
    "VITE_WEATHER_API_KEY": "@weather-api-key",
    "VITE_NEWS_API_KEY": "@news-api-key"
  },
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/health-check",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/data-sync",
      "schedule": "0 0 * * *"
    }
  ]
}