# Production Environment Configuration for Statsor Platform
# Copy this file to .env and fill in your actual production values

# === REQUIRED FOR PRODUCTION ===

# Supabase Database Configuration (Required)
VITE_SUPABASE_URL=your_supabase_project_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
VITE_SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# API Configuration
VITE_API_URL=http://localhost:3001
VITE_APP_URL=http://localhost:3006

# JWT Secret for Authentication
VITE_JWT_SECRET=your_super_secure_jwt_secret_32_chars_minimum

# === AUTHENTICATION PROVIDERS ===

# Google OAuth Configuration
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here
VITE_GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# === PAYMENT INTEGRATION ===

# Stripe Configuration (Production)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Configuration (Production)
VITE_PAYPAL_CLIENT_ID=your_paypal_live_client_id
VITE_PAYPAL_MODE=live

# === EXTERNAL API INTEGRATIONS ===

# Sports Data APIs (Free tiers available)
VITE_FOOTBALL_DATA_API_KEY=your_football_data_org_key
VITE_API_FOOTBALL_KEY=your_api_football_key

# Weather API (Free tier: 1000 calls/day)
VITE_OPENWEATHER_API_KEY=your_openweather_api_key

# News API (Free tier: 100 calls/day)
VITE_NEWS_API_KEY=your_news_api_key

# AI/ML APIs

VITE_HUGGINGFACE_API_KEY=your_huggingface_token
VITE_GROQ_API_KEY=your_groq_api_key
VITE_OPENAI_API_KEY=your_openai_api_key

# === EMAIL SERVICES ===

# SendGrid Configuration (Recommended for production)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@yourdomain.com

# SMTP Configuration (Alternative)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# === FILE STORAGE ===

# Cloudflare R2 (Recommended - free tier available)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_R2_BUCKET=statsor-uploads

# AWS S3 (Alternative)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=statsor-uploads

# === DATABASE CONFIGURATION ===

# PostgreSQL (if using direct connection)
DATABASE_URL=postgresql://username:password@localhost:5432/statsor
DB_HOST=localhost
DB_PORT=5432
DB_NAME=statsor
DB_USER=your_db_username
DB_PASSWORD=your_db_password

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# === PRODUCTION FEATURES ===

# Real-time Features
WS_PORT=3002
VITE_WS_URL=wss://your-domain.com:3002

# Analytics and Monitoring
VITE_GOOGLE_ANALYTICS_ID=your_ga_tracking_id
VITE_SENTRY_DSN=your_sentry_dsn

# === FEATURE FLAGS ===

# Core Features
VITE_ENABLE_REAL_PAYMENTS=true
VITE_ENABLE_REAL_APIS=true
VITE_ENABLE_MOCK_AUTH=false
VITE_ENABLE_SUBSCRIPTIONS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_ML_FEATURES=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PWA=true

# === SUBSCRIPTION LIMITS ===

# Free Plan Limits
FREE_PLAN_TEAMS_LIMIT=1
FREE_PLAN_PLAYERS_LIMIT=25
FREE_PLAN_MATCHES_LIMIT=10
FREE_PLAN_STORAGE_LIMIT=104857600
FREE_PLAN_API_CALLS_LIMIT=1000

# Pro Plan Limits
PRO_PLAN_TEAMS_LIMIT=5
PRO_PLAN_PLAYERS_LIMIT=150
PRO_PLAN_MATCHES_LIMIT=100
PRO_PLAN_STORAGE_LIMIT=5368709120
PRO_PLAN_API_CALLS_LIMIT=10000

# Enterprise Plan (Unlimited)
ENTERPRISE_PLAN_TEAMS_LIMIT=-1
ENTERPRISE_PLAN_PLAYERS_LIMIT=-1
ENTERPRISE_PLAN_MATCHES_LIMIT=-1
ENTERPRISE_PLAN_STORAGE_LIMIT=-1
ENTERPRISE_PLAN_API_CALLS_LIMIT=-1

# === SECURITY CONFIGURATION ===

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_session_secret_key
SESSION_MAX_AGE=604800000

# === DEPLOYMENT CONFIGURATION ===

# Environment
NODE_ENV=production
VITE_BUILD_MODE=production
VITE_DEBUG_MODE=false

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Cache TTL (in seconds)
CACHE_TTL_PLAYERS=3600
CACHE_TTL_TEAMS=1800
CACHE_TTL_MATCHES=300
CACHE_TTL_STATS=600

# Upload Limits
UPLOAD_MAX_SIZE=50mb
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx

# === OPTIONAL INTEGRATIONS ===

# Social Media APIs (for content sharing)
TWITTER_API_KEY=your_twitter_api_key
INSTAGRAM_API_KEY=your_instagram_api_key

# Push Notifications
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# Geolocation Services
MAPBOX_API_KEY=your_mapbox_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# === DEVELOPMENT OVERRIDES ===
# Uncomment for development environment

# VITE_API_URL=http://localhost:3001
# VITE_APP_URL=http://localhost:3006
# VITE_PAYPAL_MODE=sandbox
# VITE_ENABLE_MOCK_AUTH=true
# VITE_DEBUG_MODE=true
# NODE_ENV=development