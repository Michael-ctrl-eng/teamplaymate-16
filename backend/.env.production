# Production Environment Configuration for Statsor.com
# Copy this file to .env.production and fill in your actual values

# ================================
# APPLICATION CONFIGURATION
# ================================
NODE_ENV=production
PORT=3001
APP_NAME=Statsor
APP_URL=https://statsor.com
FRONTEND_URL=https://statsor.com
API_URL=https://api.statsor.com
ALLOWED_ORIGINS=https://statsor.com,https://www.statsor.com

# ================================
# DATABASE CONFIGURATION (Supabase)
# ================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Alternative PostgreSQL (if not using Supabase)
# DATABASE_URL=postgresql://user:password@localhost:5432/statsor

# ================================
# AUTHENTICATION
# ================================
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters_long_here
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_minimum_32_characters_long_here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ================================
# GOOGLE OAUTH CONFIGURATION
# ================================
GOOGLE_CLIENT_ID=your_google_oauth_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_CALLBACK_URL=https://api.statsor.com/api/v1/auth/google/callback

# ================================
# EMAIL SERVICE CONFIGURATION
# ================================
EMAIL_SERVICE=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_gmail_app_password
EMAIL_FROM=noreply@statsor.com
EMAIL_FROM_NAME=Statsor

# Alternative: SendGrid
# EMAIL_SERVICE=sendgrid
# SENDGRID_API_KEY=your_sendgrid_api_key

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Alternative: Redis Cloud
# REDIS_URL=redis://username:password@host:port

# ================================
# FILE STORAGE (Cloudflare R2)
# ================================
UPLOAD_SERVICE=cloudflare
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=statsor-uploads
R2_PUBLIC_URL=https://uploads.statsor.com

# Alternative: AWS S3
# UPLOAD_SERVICE=s3
# AWS_S3_BUCKET=statsor-uploads
# AWS_S3_ACCESS_KEY_ID=your_aws_access_key
# AWS_S3_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_REGION=us-east-1

# ================================
# PAYMENT CONFIGURATION
# ================================
# Stripe
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=live

# ================================
# SECURITY CONFIGURATION
# ================================
CORS_ORIGIN=https://statsor.com,https://www.statsor.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# ================================
# FEATURE FLAGS
# ================================
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_SUBSCRIPTIONS=true
ENABLE_CHAT=true
ENABLE_ANALYTICS=true
ENABLE_FILE_UPLOAD=true
ENABLE_API_DOCS=false
MAINTENANCE_MODE=false

# ================================
# LOGGING & MONITORING
# ================================
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true

# Sentry (Optional)
SENTRY_DSN=your_sentry_dsn_here

# ================================
# AI SERVICES (Optional)
# ================================
OPENAI_API_KEY=your_openai_api_key
DEEPSEEK_API_KEY=your_deepseek_api_key
GROQ_API_KEY=your_groq_api_key

# ================================
# THIRD-PARTY INTEGRATIONS
# ================================
# Google Analytics
GA_TRACKING_ID=your_google_analytics_tracking_id

# Football API (for real data)
FOOTBALL_API_KEY=your_football_api_key

# Weather API (for match conditions)
WEATHER_API_KEY=your_weather_api_key