# ðŸ†“ FREE DEPLOYMENT ENVIRONMENT CONFIGURATION
# No credit cards required - 100% free services

# ================================
# APPLICATION CONFIGURATION
# ================================
NODE_ENV=production
PORT=3000
APP_NAME=Statsor
APP_URL=https://statsor.com
FRONTEND_URL=https://statsor.com

# ================================
# SUPABASE CONFIGURATION (FREE)
# ================================
# Get these from supabase.com (free account)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ================================
# AUTHENTICATION (FREE)
# ================================
# Generate a secure random string (32+ characters)
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters_long_here
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_minimum_32_characters_long_here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ================================
# EMAIL SERVICE (FREE - GMAIL SMTP)
# ================================
# Use your Gmail account with app password
EMAIL_SERVICE=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_gmail_app_password_16_characters
EMAIL_FROM=noreply@statsor.com
EMAIL_FROM_NAME=Statsor Platform

# ================================
# CORS CONFIGURATION
# ================================
CORS_ORIGIN=https://statsor.com,https://www.statsor.com
ALLOWED_ORIGINS=https://statsor.com,https://www.statsor.com

# ================================
# FEATURE FLAGS (FREE FEATURES)
# ================================
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_SUBSCRIPTIONS=false
ENABLE_CHAT=true
ENABLE_ANALYTICS=true
ENABLE_FILE_UPLOAD=true
ENABLE_API_DOCS=true
MAINTENANCE_MODE=false

# ================================
# RATE LIMITING (PROTECTION)
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# SECURITY CONFIGURATION
# ================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_32_chars_minimum

# ================================
# LOGGING CONFIGURATION
# ================================
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true

# ================================
# FILE STORAGE (SUPABASE STORAGE - FREE)
# ================================
UPLOAD_SERVICE=supabase
SUPABASE_STORAGE_BUCKET=uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ================================
# GOOGLE OAUTH (OPTIONAL - FREE)
# ================================
# Set these up later if you want Google login
# GOOGLE_CLIENT_ID=your_google_oauth_client_id
# GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# ================================
# ANALYTICS (OPTIONAL - FREE)
# ================================
# Add Google Analytics later if desired
# GA_TRACKING_ID=your_google_analytics_id

# ================================
# DEVELOPMENT SETTINGS
# ================================
DEBUG=false
TRUST_PROXY=true

# ================================
# FREE SERVICE LIMITS
# ================================
# Railway Free Tier: 512MB RAM, 8GB storage
# Supabase Free Tier: 500MB database, 2GB file storage
# Netlify Free Tier: 100GB bandwidth/month
# Gmail SMTP: 500 emails/day

# ================================
# NOTES FOR FREE DEPLOYMENT
# ================================
# 1. Get Supabase keys from: https://supabase.com (free signup)
# 2. Generate JWT secrets using: openssl rand -base64 32
# 3. Setup Gmail app password: Google Account > Security > App passwords
# 4. Deploy frontend to Netlify: https://netlify.com (free)
# 5. Deploy backend to Railway: https://railway.app (free)
# 6. Point statsor.com DNS to Netlify