# Application Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1
APP_NAME=StatSor Backend
APP_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database - Supabase (Primary)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database - PostgreSQL (Alternative/Direct Connection)
DATABASE_URL=postgresql://username:password@localhost:5432/statsor
DB_HOST=localhost
DB_PORT=5432
DB_NAME=statsor
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long
JWT_REFRESH_SECRET=your_super_secret_refresh_key_at_least_32_characters_long
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=statsor-backend
JWT_AUDIENCE=statsor-app
SESSION_SECRET=your_super_secret_session_key_here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback

# GitHub OAuth (Optional)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Email Service Configuration
EMAIL_SERVICE=sendgrid
EMAIL_FROM=noreply@statsor.com
EMAIL_FROM_NAME=StatSor
SUPPORT_EMAIL=support@statsor.com
FEEDBACK_EMAIL=feedback@statsor.com
ADMIN_EMAIL=admin@statsor.com

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key

# SMTP Configuration (Gmail SMTP - 500 emails/day free)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_TLS=true
SMTP_USER=statsor1@gmail.com
SMTP_PASS=statsor+12

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_SES_REGION=us-east-1

# File Upload Configuration
UPLOAD_SERVICE=s3
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# AWS S3 Configuration
AWS_S3_BUCKET=your_s3_bucket_name
AWS_S3_REGION=us-east-1
AWS_S3_ACCESS_KEY_ID=your_s3_access_key
AWS_S3_SECRET_ACCESS_KEY=your_s3_secret_key

# Cloudinary Configuration (Alternative to S3)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Cloudflare R2 Configuration (Alternative)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_R2_BUCKET=statsor-uploads

# AI Services
DEEPSEEK_API_KEY=your_deepseek_api_key
OPENROUTER_API_KEY=your_openrouter_api_key
GROQ_API_KEY=your_groq_api_key

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_PRICE_BASIC=price_basic_plan_id
STRIPE_PRICE_PRO=price_pro_plan_id
STRIPE_PRICE_ENTERPRISE=price_enterprise_plan_id

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# Security Configuration
BCRYPT_ROUNDS=12
CORS_ORIGIN=*
HELMET_CSP=false
TRUST_PROXY=false

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE=logs/app.log
LOG_ERROR_FILE=logs/error.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=your_ga_tracking_id
MIXPANEL_TOKEN=your_mixpanel_token

# External APIs
FOOTBALL_API_KEY=your_football_api_key
WEATHER_API_KEY=your_weather_api_key
MAPS_API_KEY=your_maps_api_key

# WebSocket Configuration
SOCKET_IO_CORS_ORIGIN=http://localhost:3000
SOCKET_IO_TRANSPORTS=websocket,polling

# Cache Configuration
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_PASSWORD_RESET=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_SUBSCRIPTIONS=true
ENABLE_CHAT=true
ENABLE_ANALYTICS=true
ENABLE_FILE_UPLOAD=true

# Development Configuration
DEBUG=false
MOCK_EXTERNAL_APIS=false
SEED_DATABASE=false

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Maintenance Configuration
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# Performance Configuration
CLUSTER_WORKERS=0
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# Validation Configuration
VALIDATION_ABORT_EARLY=true
VALIDATION_ALLOW_UNKNOWN=false
VALIDATION_STRIP_UNKNOWN=false